<div>
  <div>
    <div>
      <h3><%=@post.title%></h3> by: <%=@user.name%>
      <p>Comments: <%=@post.commentsCounter%>, Likes:<%=@post.likesCounter%></p>
    </div>
    <p><%=@post.text%></p>
  </div>

  <% render 'comments/add_comment', post: @post %>

  <div>
    <%= render partial: 'comment', collection: @post.comments.order(created_at: :desc) %>
  </div>
</div>